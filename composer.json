{
    "name": "setosa/auth-system",
    "description": "Secure user authentication system with PHP",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "firebase/php-jwt": "^6.8",
        "vlucas/phpdotenv": "^5.5",
        "ramsey/uuid": "^4.7",
        "monolog/monolog": "^3.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
